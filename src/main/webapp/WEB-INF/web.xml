<?xml version="1.0" encoding="UTF-8"?>
<web-app version="6.0" xmlns="https://jakarta.ee/xml/ns/jakartaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee https://jakarta.ee/xml/ns/jakartaee/web-app_6_0.xsd">
    <servlet>
        <servlet-name>Validar</servlet-name>
        <servlet-class>servlet.Validar</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>PersonalCRUD</servlet-name>
        <servlet-class>servlet.PersonalCRUD</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Asistencia</servlet-name>
        <servlet-class>servlet.Asistencia</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>rptAsistencia</servlet-name>
        <servlet-class>servlet.rptAsistencia</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Validar</servlet-name>
        <url-pattern>/validar</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>PersonalCRUD</servlet-name>
        <url-pattern>/personalcrud</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Asistencia</servlet-name>
        <url-pattern>/asistencia</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>rptAsistencia</servlet-name>
        <url-pattern>/rptasistencia</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
